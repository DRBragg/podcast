<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Primary Meta Tags -->
<title><%= metadata.title %><%= " | #{title}" if title %></title>
<meta name="title" content="<%= title || metadata.title %>">
<meta name="description" content="<%= description || metadata.description %>">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="<%= url || metadata.url %>">
<meta property="og:title" content="<%= title || metadata.title %>">
<meta property="og:description" content="<%= description || metadata.description %>">
<meta property="og:image" content="<%= "#{metadata.url}/images/social_logo.jpeg" %>">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="<%= url || metadata.url %>">
<meta property="twitter:title" content="<%= title || metadata.title %>">
<meta property="twitter:description" content="<%= description || metadata.description %>">
<meta property="twitter:image" content="<%= "#{metadata.url}/images/social_logo.jpeg" %>">

<link rel="stylesheet" href="<%= asset_path :css %>" data-turbo-track="reload" />
<script src="<%= asset_path :js %>" data-turbo-track="reload" defer></script>
<%= live_reload_dev_js %>
